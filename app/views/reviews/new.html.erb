
<div class="container">
  <h1>New Review</h1>
  <%= form_for @review do |f| %>

    <%= f.label :author %>
    <%= f.text_field :author %>

    <%= f.label :rating %>
    <%= f.text_field :rating %>

    <%= f.label :body %>
    <%= f.text_field :body %>

    <% f.label :restaurant_id %>
    <%= f.hidden_field :restaurant_id, :value => params[:id] %>

    <%= f.submit class: 'btn'%>

  <% end %>
</div>
