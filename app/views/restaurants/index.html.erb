<h1>Squeal</h1>
<%= link_to 'New Restaurant', new_restaurant_path, {class: 'btn'} %>
<div class="row">
  <% @restaurants.each do |restaurant| %>
    <div class="col s4">
      <div class="restaurant">
        <%= image_tag restaurant.image.url(:medium), {class: 'rest-img'} %>
        <h3><%= restaurant.name %></h3>
        <p><%= restaurant.rating %></p>
        <p><%= restaurant.description %><p>
        <%= link_to 'Read More', restaurant_path(restaurant.id), {class: 'btn'} %>
      </div>
    </div>
  <% end %>
</div>
