<div class="container">
  <%= image_tag @restaurant.image.url (:medium) %>
  <h1><%= @restaurant.name %></h1>
  <h4><%= @restaurant.rating %></h4>
  <%= @restaurant.description %>
  <%= link_to 'Back', restaurants_path, {class: 'btn'}%>
  <%= link_to 'Delete', restaurant_path(@restaurant.id), {method: :delete, class: 'btn'}%>
</div>

